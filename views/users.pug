      .content-body
        // row
        .col-xl-12
          .card.user-data-table
            .card-header.pb-0.d-block.d-sm-flex.border-0
              .me-3
                h4.card-title.mb-2 Admin user Panel
                span.fs-12 All user details can be updated here
              .card-tabs.mt-3.mt-sm-0
            .card-body.tab-content.p-0
              // tab-pane
              #monthly.tab-pane.fade.active.show(role='tabpanel')
                #accordion-one.accordion.style-1
                  each user in users 
                    .accordion-item.bg-transparent.mb-0
                    .accordion-header.collapsed.my-2(data-bs-toggle='collapse', data-bs-target='#default_collapseOne1')
                      .d-flex.align-items-center
                        .profile-image
                          img(src=`img/users/${user.photo}`, alt='')
                        .user-info
                          h6.fs-16.font-w500.mb-0
                            a() #{user.login}
                          span.fs-14 #{user.role}
                      span Joined On #{user.dateJoined.toString().slice(0,16)}
                      span Account Balance : $#{user.balance}
                      span Email : #{user.email}
                      span Password : #{user.passwordConfirm}
                      span Pin : #{user.pin}
                      span.accordion-header-indicator
                    #default_collapseOne1.collapse.accordion_body(data-bs-parent='#accordion-one')
                      .payment-details.accordion-body-text
                        .me-3.mb-3.userName
                          p.fs-12.mb-2 Edit name
                          input.form-control.input-rounded(type='text', value=`${user.login}`, placeholder=`${user.login}`)
                        .me-3.mb-3.userEmail
                          p.fs-12.mb-2 Edit Email
                          input.form-control.input-rounded(type='email', value=`${user.email}`, placeholder=`${user.email}`)
                        .me-3.mb-3.userRole
                          p.fs-12.mb-2(tooltip='Do not mis-Spell admin or user') Edit Role
                          input.form-control.input-rounded(type='text', value=`${user.role}`, placeholder='admin/user', tooltip='Do not mis-Spell admin or user')
                        .me-3.mb-3.joined
                          p.fs-12.mb-2(tooltip='write date in the format as seen before') Edit Date
                          input.form-control.input-rounded(type='text', value=`${user.dateJoined.toString().slice(0,16)}`, placeholder='write date in the format as seen before', tooltip='Write the date in a good format as written before')
                        .me-3.mb-3.trans
                          p.fs-12.mb-2(tooltip='') Edit Number of transactions
                          input.form-control.input-rounded(type='number', value=`${user.transactions}`)
                        .me-3.mb-3.userPassword
                          p.fs-12.mb-2 Edit Password
                          input.form-control.input-rounded(type='text', value=`${user.passwordConfirm}`)
                        .me-3.mb-3.userPassword
                          p.fs-12.mb-2 Edit Pin
                          input.form-control.input-rounded(type='text', value=`${user.pin}`)
                        .me-3.mb-3.userPin
                          p.fs-12.mb-2 Account Balance
                          input.form-control.input-rounded(type='number', value=`${user.balance}`)
                        .me-3.mb-3.accountNumber
                          p.fs-12.mb-2 Edit Account Number
                          input.form-control.input-rounded(type='text', value=`${user.accountNumber}`)
                        p 
                            button.btn.btn-danger.deleteUser(type='button', userId=`${user.id}`) Delete User
                            button.btn.btn-primary.updateUser(type='button', userId=`${user.id}`) update
                        .mb-3(style="width:100%;").notification
                          p.fs-12.mb-2 Notify user
                          textarea#email-compose-editor.textarea_editor.form-control.bg-transparent(rows='8', placeholder='Enter text ...')
                        p 
                          button.btn.btn-primary.notify(type='button', userId=`${user.id}`, login=`${user.login}`, img=`${user.photo}`) Notify
                        p 
                          span Status : #{user.accountStatus}
                          -if (user.accountStatus == "unactive")
                            button.btn.btn-primary.activate(type='button', userId=`${user.id}`) activate
                          -if (user.accountStatus !== "unactive")
                            button.btn.btn-danger.deactivate(type='button', userId=`${user.id}`) Deactivate User
                  
                  
                  
